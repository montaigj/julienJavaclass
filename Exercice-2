public class Canard {
    // 1. Attributs (Private pour l'encapsulation) [cite: 20]
    private String couleur;
    private int taille; 

    // 2. Constructeur (C'est ce qui manquait !) 
    public Canard(String couleur, int taille) {
        this.couleur = couleur;
        this.taille = taille;
    }
    
    // 3. Getters et Setters
    public String getCouleur(){
        return couleur;
    }

    public void setCouleur(String couleur){
        this.couleur = couleur;
    }

    public int getTaille(){
        return taille;
    }       
    public void setTaille(int taille){
    this.taille = taille;
    
}
    
    // 4. MÃ©thode Main
    public static void main(String[] args) {
        
        Canard canard1 = new Canard("jaune", 10);

        
        System.out.println("Canard 1 : " + canard1.getCouleur() + " de " + canard1.getTaille() + " cm.");
    }
}